@model ProductFormViewModel
@{
    ViewData["Title"] = "Product Form";
}

<h2>@(Model.ID >0 ? "Edit" : "Create") Product</h2>
<hr />
<div asp-validation-summary="All">

</div>
<form method="post" asp-action="@(Model.ID >0 ? "Edit" : "Create")" enctype="multipart/form-data">
    <input type="hidden" asp-for="ID"/>
    <div class="form-group">
        <label class="text-muted" asp-for="ProductName"></label>
        <input type="text" class="form-control" asp-for="ProductName" maxlength="100"/>
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="text-muted" asp-for="SupplierID"></label>
        <select class="form-control" asp-for="SupplierID" asp-items="@(new SelectList(Model.Suppliers,"SupplierID","SupplierName"))">
            <option>---select one---</option>
        </select>
        <span asp-validation-for="SupplierID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="text-muted" asp-for="QuantityPerUnit"></label>
        <input type="text" class="form-control" asp-for="QuantityPerUnit" maxlength="100" />
        <span asp-validation-for="QuantityPerUnit" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="text-muted" asp-for="ReorderLevel"></label>
        <input type="number" class="form-control" asp-for="ReorderLevel" maxlength="100" />
        <span asp-validation-for="ReorderLevel" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="text-muted" asp-for="UnitPrice"></label>
        <input type="number" class="form-control" asp-for="UnitPrice" maxlength="100" />
        <span asp-validation-for="UnitPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="text-muted" asp-for="UnitsInStock"></label>
        <input type="number" class="form-control" asp-for="UnitsInStock" maxlength="100" />
        <span asp-validation-for="UnitsInStock" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="text-muted" asp-for="UnitsOnOrder"></label>
        <input type="number" class="form-control" asp-for="UnitsOnOrder" maxlength="100" />
        <span asp-validation-for="UnitsOnOrder" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a> 
</form>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}