@model SuppliersViewModel
@{
    ViewData["Title"] = "Supplier Form";
}

@*<h2>@(Model.SupplierId > 0 ? "Edit" : "Create") Supplier</h2>*@
<hr />
<div asp-validation-summary="All">
</div>
<form method="post" asp-action="@(Model.SupplierId >0 ? "Edit" : "Create")" enctype="multipart/form-data">
    <input type="hidden" asp-for="SupplierId" />
    <div class="form-group">
        <label class="text-muted" asp-for="SupplierName"></label>
        <input type="text" class="form-control" asp-for="SupplierName" maxlength="100" />
        <span asp-validation-for="SupplierName" class="text-danger"></span>
    </div>
   
   
    <br />
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
</form>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }